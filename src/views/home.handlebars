<nav>
    {{> menu}}
</nav>

<main>
    <section>
        <h1>Bienvenido a la Tienda</h1>
        <form action="/api/sessions/login" method="POST">
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" required>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Iniciar sesión</button>
        </form>
        <p>¿No tienes una cuenta? <a href="/register">Regístrate aquí</a></p>
    </section>

    <section class="containerProducts">
        <h1>Productos</h1>
        <div id="listaProductos">
            {{#each productos}}
            <div>
                <h2>{{title}}</h2>
                <p>{{_id}}</p>
                <p>{{description}}</p>
                <p>Precio: ${{price}}</p>
                <p>Categoría: {{category}}</p>
                <a class="button-link" href="/api/products/{{_id}}">Ver producto</a>
                <form action="/api/carts/add/{{_id}}" method="POST">
                    <input type="hidden" name="productId" value="{{_id}}">
                    <button type="submit">Agregar al carrito</button>
                </form>
                <button onclick="addToCart('{{_id}}')">Agregar al Carrito</button>
            </div>
            {{/each}}
        </div>
    </section>

    <section class="paginas">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Anterior</a>
        {{/if}}

        {{#if hasNextPage}}
            <a href="{{nextLink}}">Siguiente</a>
        {{/if}}

        <p>Página {{page}} de {{totalPages}}</p>
    </section>
</main>
