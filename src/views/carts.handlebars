<h1>Carrito de Compras</h1>

{{#if cart.products.length}}
    <ul>
    {{#each cart.products}}
        <li>
        Producto: {{this.product.title}} <br> 
        Cantidad: {{this.quantity}}<br>
        </li>
    {{/each}}
    </ul>
{{else}}
    <p>No tienes productos en tu carrito.</p>
{{/if}}

<!-- Mensaje de productos que no se pudieron procesar -->
{{#if message}}
  <p>{{message}}</p>
{{/if}}

<!-- Botones para seguir comprando o finalizar compra -->
<a href="/api/product"><button>Seguir comprando</button></a>
<form action="/api/carts/{{cart._id}}/purchase" method="POST">
    <button type="submit">Finalizar compra</button>
</form>